@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Demo</title>
    <link href="~/Content/toastr.min.css" rel="stylesheet" />
</head>
<body>
    <div>
        <button id="btnTest">Click</button>
        <div id="resultDiv"></div>
    </div>
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script src="~/Scripts/toastr.min.js"></script>
    <script type="text/javascript">
        toastr.options.timeOut = 2000;
        toastr.options.positionClass = 'toast-bottom-right';

        toastr.success('script Load started.');

        $('#btnTest').click(function () {
            toastr.info('Button click event.');
            $.ajax({
                type: 'Get',
                url: '/Home/DemoResult',
                success: function (data) {
                    toastr.success('Data received.');
                    var resultDiv = $('#resultDiv');
                    var firstName = data.FistName;
                    var lastName = data.LastName;
                    toastr.info(firstName, "First Name");
                    toastr.info(lastName, "Last Name");
                },
                error: function (request, status, error) {
                    toastr.success('Error occurred.');
                }
            });
        });

        toastr.success('script Load Completed.');
    </script>
</body>
</html>
